{# src/SB/Bundle/UserBundle/Resources/views/Security/login.html.twig #}

{% extends "SBCoreBundle::layout.html.twig" %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                {# S'il y a une erreur, on l'affiche dans un joli cadre #}
                {% if error %}
                    <div class="alert alert-danger">{{ error.message }}</div>
                {% endif %}

                {# Le formulaire, avec URL de soumission vers la route « login_check » comme on l'a vu #}
                <form class="form-horizontal" action="{{ path('login_check') }}" method="post">
                    <div class="form-group">
                        <label for="username">Login :</label>
                        <input type="text" id="username" name="_username" class="form-control"
                               value="{{ last_username }}">
                    </div>
                    <div class="form-group">
                        <label for="password">Mot de passe :</label>
                        <input type="password" id="password" name="_password" class="form-control">
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Connexion" class="btn btn-primary"/>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}